{
  "color-theme": "material theme ocean",
  "terminal.external.windowsExec": "C:\\WINDOWS\\System32\\wsl.exe",
  "editor.fontFamily": "'JetBrains Mono',Consolas, 'Courier New', monospace",
  "editor.fontSize": 16,
  "editor.fontWeight": "bold",
  "editor.fontLigatures": true,
  "editor.letterSpacing": 0.5,
  "terminal.integrated.fontFamily": "courier",
  "editor.codeLensFontFamily": "'Agency FB'",
  "vim.vimrc.enable": true,
  "editor.smoothScrolling": true,
  "vim.vimrc.path": "$HOME/.config/init.vim",
  "glassit.alpha": 220,
  "extension.used": ["Glasslt-VSC", "vim"],
  "shortcuts": {
    "focus into Side Bar": "CTRL + F",
    "Toggle Side Bar": "CTRL + T"
  }
}

//keybindings
[
  {
    "key": "ctrl+t",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "ctrl+b",
    "command": "-workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "ctrl+f",
    "command": "workbench.action.focusSideBar"
  },
  {
    "key": "ctrl+0",
    "command": "-workbench.action.focusSideBar"
  },
  {
    "key": "d",
    "command": "deleteFile",
    "when": "explorerViewletFocus && !inputFocus"
  },
  {
    "key": "r",
    "command": "renameFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "o",
    "command": "list.select",
    "when": "listFocus && !inputFocus"
  },
  {
    "key": "n",
    "command": "explorer.newFile",
    "when": "explorerViewletFocus && !inputFocus"
  },
  {
    "key": "N",
    "command": "explorer.newFolder",
    "when": "explorerViewletFocus && !inputFocus"
  },
]
